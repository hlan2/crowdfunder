<div class="form-outline">

	<div class=" rounded-content-frame">
	<%= form_for @project do |f| %>
		<h1>New Project</h1>
 	<div class="form group ">
 	
 		<!--<%= f.label :name%>-->
 		<%= f.text_field :name, :placeholder => "Name" %>
 		
 	</div>

 	<div class="form group">
 		<!--<%= f.label :description %>-->
 		<%= f.text_field :description, :placeholder =>"Description" %>
 	</div>
 	<div class="form group">
 		<%= f.label :start_at %>
 		<%= f.date_select :start_at %>
 	</div>
	<div class="form group">
 		<%= f.label :end_at %>
 		<%= f.date_select :end_at %>
 	</div>
 	<div class="form group">
 		<%= f.label :funding_goal, "Top Funding Amount", {class: 'my-class', id: "my-id"} %>
 		<%= f.number_field :funding_goal %>
	</div>

	<h4>Rewards</h4>
	<%= f.fields_for :rewards do |rewards_form| %>
		<div class="form group">
	 		<%= rewards_form.label(:description) %>
	 		<%= rewards_form.text_area :description  %>
		</div>
		<div class="form group">
	 		<%= rewards_form.label :backer_limit %>
	 		<%= rewards_form.number_field :backer_limit, class: 'number' %>
		</div>
		
	<% end %>

 	<div class="actions"><%= f.submit class: 'button' %></div>

 <%end%>
</div>
 	 </div>